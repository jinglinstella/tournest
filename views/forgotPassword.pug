extends base

block content
  main.main
    .forgot-form
      h2.heading-secondary.ma-bt-lg Forgot Password
      form.form(method='post', action='/forgotPassword') 
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', name='email', placeholder='you@example.com', required)
        .form__group
          button.btn.btn--green Reset Password